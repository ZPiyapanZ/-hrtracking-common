{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "pretty": true,
    "target": "es6",
    "allowJs": true,
    "baseUrl": ".",
    "outDir": "./dist",
    "rootDirs": ["./src"],
    "moduleResolution": "node"
  },
  "include": ["./**/*", "../types"],
  "exclude": ["node_modules/**/*", "test/**/*", "dist/**/*"]
}
